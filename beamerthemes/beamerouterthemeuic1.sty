\defbeamertemplate*{footline}{UIC theme}
{
  \leavevmode%
  \hbox{%
    \begin{beamercolorbox}[wd=0.5\paperwidth,ht=\footerheight,dp=\footerdepth,left]{date in head/foot}%
      % UIC Logo
      \resizebox{!}{\footerheight}{\includegraphics{logos/UICwhite.pdf}}%
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=0.5\paperwidth,ht=\footerheight,dp=\footerdepth,right]{date in head/foot}%
      \resizebox{!}{\footerheight}{\includegraphics{logos/DepartmentWhite.pdf}}%
    \end{beamercolorbox}%
  }
}

\defbeamertemplate*{headline}{UIC theme}
{
  \leavevmode%
  \hbox{%
    \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.65ex,dp=1.5ex,right]{section in head/foot}%
      \usebeamerfont{section in head/foot}\insertsectionhead\hspace*{2ex}
    \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.65ex,dp=1.5ex,left]{subsection in head/foot}%
      \usebeamerfont{subsection in head/foot}\hspace*{2ex}\insertsubsectionhead
    \end{beamercolorbox}
    \vskip0pt%
  }%
}

% Frame title: default

\defbeamertemplate*{frametitle}{UIC theme}[1][left]{
  \ifbeamercolorempty[bg]{frametitle}{}{\nointerlineskip}%
  \@tempdima=\textwidth%
  \advance\@tempdima by\beamer@leftmargin%
  \advance\@tempdima by\beamer@rightmargin%
  \begin{beamercolorbox}[sep=0.3cm,#1,wd=\the\@tempdima]{frametitle}
  %% \pgfsetfillopacity{0}
    \usebeamerfont{frametitle}%
    \vbox{}\vskip-1ex%
    \if@tempswa\else\csname beamer@fte#1\endcsname\fi%
    \strut\insertframetitle\strut\par%
        {%
          \ifx\insertframesubtitle\@empty%
          \else%
              {\usebeamerfont{framesubtitle}\usebeamercolor[fg]{framesubtitle}\insertframesubtitle\strut\par}%
              \fi
        }%
        \vskip-1ex%
        \if@tempswa\else\vskip-.3cm\fi% set inside beamercolorbox... evil here...
  \end{beamercolorbox}%
  \vspace{-0.6cm}
  \begin{beamercolorbox}[wd=0.75\paperwidth,ht=0.065cm]{frametitle underline}
    
  \end{beamercolorbox}
}

