\setbeamertemplate{caption}[numbered]
\defbeamertemplate*{title page}{customized}[1][]{%
  \newsavebox\titleBox
  \setbeamercolor{doebox}{fg=white,bg=darkblue}

  \setlength{\TPHorizModule}{\paperwidth}						%These must
  \setlength{\TPVertModule}{\paperheight}						%stay here

  \newcommand{\xdownarrow}[1]{%
    {\left\downarrow\vbox to #1{}\right.\kern-\nulldelimiterspace}}

  \begin{tikzpicture}[overlay,remember picture]

    \node[align=center,text=white,fill=darkblue,minimum width=\paperwidth] at (current page.north west) [anchor=north west]{%
      %% Poster title
      \begin{varwidth}{0.65\paperwidth}%
        \centering
        \vspace*{2ex}
        \fontsize{80}{100}\selectfont \inserttitle%
      \end{varwidth}%
      \\
      \\
      \\
      %% Author
      \begin{varwidth}{0.9\textwidth}
        \centering
        \fontsize{50}{60} \textit{\insertauthor}
      \end{varwidth}
      \\
      %% \vspace*{1cm}
      \\
      %% Institution Affiliations
      \begin{varwidth}{0.85\textwidth}
        \centering
        \fontsize{40}{50}\selectfont \insertinstitute
      \end{varwidth}
      \\
      \textcolor{darkblue}{\rule{\textwidth}{0.01mm}}
    };
    \vspace{3cm}
    %% \end{scope}
  \end{tikzpicture}

}

